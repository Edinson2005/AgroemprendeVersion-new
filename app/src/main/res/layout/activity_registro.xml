<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="685dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-317dp"
            android:textColor="@color/colortexto"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:text="Registro"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvApellidoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="68dp"
            android:font="@font/montserrat_bold"
            android:text="Nombre:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="94dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/text_background"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registroapellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="155dp"
            android:font="@font/montserrat_bold"
            android:text="Apellido:"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etApellido"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="183dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/text_background"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registroemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="245dp"
            android:font="@font/montserrat_bold"
            android:text="Email:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCorreoElectronico"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="270dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/registrotelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="332dp"
            android:font="@font/montserrat_bold"
            android:text="Teléfono"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="357dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:inputType="phone"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/registropassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="419dp"
            android:font="@font/montserrat_bold"
            android:text="Contraseña"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="445dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registroconfirmarpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="509dp"
            android:font="@font/montserrat_bold"
            android:text="Confirmar contraseña"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etconfirmarPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="535dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="604dp"
            android:layout_marginRight="53dp"
            android:text="¿Ya tienes cuenta?"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="188dp"
            android:layout_marginTop="604dp"
            android:text=" Inicia sesión"
            android:textColor="@color/colortexto"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="626dp"
            android:layout_marginRight="79dp"
            android:elevation="23dp"
            android:backgroundTint="@color/colortexto"

            android:text="Registrarse" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>






</LinearLayout>