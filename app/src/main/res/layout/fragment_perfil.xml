<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="315dp"
        android:layout_height="566dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/nieve"
        app:cardCornerRadius="23dp">

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="233dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/editar" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/baseline_account_circle_24" />

        <TextView

            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="57dp"
            android:text="Nombre"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="265dp"
            android:text="Correo Electronico:" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="296dp"
            android:background="@drawable/text_background"
            android:drawableStart="@drawable/gmail"
            android:drawablePadding="12dp"
            android:padding="17dp"
            android:textColor="#555555"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="385dp"
            android:text="Telefono:" />

        <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="416dp"
            android:background="@drawable/text_background"
            android:drawableStart="@drawable/telephone"
            android:drawablePadding="12dp"
            android:padding="17dp"
            android:textColor="#555555"
            android:textSize="18sp" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="998dp"
        android:layout_height="390dp"
        android:layout_marginLeft="-693dp"
        android:layout_marginTop="-55dp"
        app:srcCompat="@drawable/img_1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="184dp"
        android:layout_height="130dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="50dp"
        android:text="Perfil"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>