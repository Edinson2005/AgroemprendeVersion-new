<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioEditar">

    <androidx.cardview.widget.CardView
        android:layout_width="315dp"
        android:layout_height="598dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="23dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-260dp"
            android:textColor="@color/colortexto"
            android:text="Editar"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNombreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="86dp"
            android:text="Nombre:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="109dp"
            android:background="@drawable/text_background"
            android:hint="Nombre"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvApellidoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="169dp"
            android:text="Apellido:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtApellido"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/text_background"
            android:hint="Apellido"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNacimientoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="255dp"
            android:text="Fecha de nacimiento:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNacimiento"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="278dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="Fecha de nacimiento"
            android:inputType="date"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTelefonoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="338dp"
            android:text="Teléfono:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTelefono"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="Teléfono"
            android:inputType="phone"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNumIdentificacionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="419dp"
            android:text="Número de identificación:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNumIdentificacion"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="443dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:hint="Número de identificación"
            android:inputType="text"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="19dp"
            android:layout_marginTop="500dp"
            android:text="Correo electrónico:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="459dp">


            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/btnEditarEmail"
                android:background="@drawable/text_background"
                android:hint="Correo electrónico"
                android:padding="14dp"
                android:textColor="#555555"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditarEmail"
                android:layout_width="68dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/colortexto"
                android:layout_marginRight="10dp"
                android:elevation="23dp"
                android:padding="2dp"
                android:text="Editar" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnguardardatos"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:elevation="23dp"
        android:backgroundTint="@color/colortexto"
        android:layout_marginTop="699dp"
        android:layout_marginLeft="117dp"
        android:text="Guardar" />

</RelativeLayout>