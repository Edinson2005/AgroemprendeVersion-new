<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuario.RecuperarPassword">


    <androidx.cardview.widget.CardView
        android:layout_width="314dp"
        android:layout_height="306dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="248dp"
        android:layout_marginRight="40dp"
        android:background="@color/cardview_dark_background"
        app:cardCornerRadius="23dp">


        <TextView
            android:id="@+id/recuperarpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Recuperar ContraseÃ±a"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registroemailrecuperacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="85dp"
            android:font="@font/montserrat_bold"
            android:text="Email:"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etCorreoElectronicorecuperacion"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iniciorecuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="176dp"
            android:layout_marginRight="53dp"
            android:text="Volver al inicio de sesion"
            android:textColor="@color/colortexto"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnenviarrecuperacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="213dp"

            android:layout_marginRight="79dp"
            android:backgroundTint="@color/colortexto"
            android:elevation="23dp"
            android:text="Enviar" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

</LinearLayout>