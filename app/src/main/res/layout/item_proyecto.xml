<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp"
    android:background="@drawable/card_border"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        app:cornerRadius="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_border"
        android:paddingLeft="10dp"
        android:orientation="vertical">


    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Título del Proyecto"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/fechaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Fecha del Proyecto"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/estadoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colortexto"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Estado del Proyecto"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="Descripción del Proyecto"
        android:layout_marginBottom="9dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
